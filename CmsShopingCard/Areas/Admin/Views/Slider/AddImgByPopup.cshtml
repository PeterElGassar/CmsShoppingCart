@model CmsShopingCard.Models.Data.SliderGallery



@using (Html.BeginForm("", "", FormMethod.Post, new
{
    @id = "createForm",
    enctype = "multipart/form-data",
    onsubmit = "return submitFrom(this);"
    //accept_charset = "utf-8"
}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SliderId, new { id = "slider-hidden-id" })    
    @Html.HiddenFor(model => model.ImageName, new { id = "slider-hidden-ImageName" })
    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-5" })

            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.LabelFor(model => model.UrlLink, htmlAttributes: new { @class = "control-label col-md-5" })

            @Html.EditorFor(model => model.UrlLink, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UrlLink, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    @*<div class="form-group" id="InputImgDiv">

            <div class="col-md-10 mx-auto">
                <label class="control-label" for="ImageUpload">Add Slider Image</label>
                <div id="InputDiv">
                    <input type="file" name="sliderImage" id="ImageUpload" accept="image/*" />
                </div>
                <img src="~/AppImg/41WojpNRS5L.png" id="ImgPreview" width="250" height="250" />
            </div>
        </div>*@


    <div class="form-group" id="InputImgDiv">
        <div class="form-group d-flex justify-content-center text-center">

            <div class="col-md-10">
                <div id="InputDiv" class="w-100 ">
                    <input type="file" name="sliderImage" id="ImageUpload" accept="image/*" />
                </div>
                <!--Validation Span-->
                <span class="text-danger field-validation-error" data-valmsg-for="ImageUpload" data-valmsg-replace="true" id="ImageUpload" style="display: none">
                    <span for="ImageUpload" id="ImageUpload" class="" style="">The Image is required.</span>
                </span>


                @if (Model.ImageName != null)
                {
                    <img class="rounded img-fluid img-thumbnail mt-2" src="/Images/Uploads/SliderImages/@Model.ImageName" id="ImgPreview" width="150" height="160" />
                }
                else
                {
                    <img class=" rounded img-fluid img-thumbnail mt-2  brand-img-preview" src="~/AppImg/41WojpNRS5L.png" id="ImgPreview" width="150" height="160" />

                }

            </div>
        </div>
    </div>









    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

}
