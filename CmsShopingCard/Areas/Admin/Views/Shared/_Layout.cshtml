<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dash Board</title>

    <!--Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <link rel="titel icon" type="image/png" href="~/Content/adminTemplate/images/title-img.png">

    <!-- Bootstrap CSS -->
    <link href="~/Content/newTemplet/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Datatables -->
    @*<link href="~/content/datatables/css/dataTables.bootstrap.css" rel="stylesheet" />*@

    <!-- Reset File -->
    <link rel="stylesheet" href="~/Content/AdminTemplate/Css/Reset.css">
    <!-- Main Style -->
    <link rel="stylesheet" href="~/Content/AdminTemplate/Css/Main-Style.css">


    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <!-- fav icon -->
    <link rel="shortcut icon" href="~/Images/shopping-cart.png" />

    <link href="~/Scripts/duDialog/duDialog.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link href="~/Content/newTemplet/css/plugins.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />

</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light">
        <!-- Toggler BTN for Small Devices -->
        <button class="navbar-toggler ml-auto bg-light" type="button" data-toggle="collapse" data-target="#myNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--End  Toggler BTN for Small Devices -->

        <div class="collapse navbar-collapse" id="myNavbar">
            <div class="container-fluid">
                <div class="row">
                    <!-- SideBar -->
                    <div class="col-xl-2 col-lg-3 col-md-4 sideBar fixed-top">
                        <a href="#"
                           class="navbar-brand text-white d-block text-center mx-auto py-3 my-3 borderBottom">Code&Create</a>


                        <div class=" borderBottom pb-3">
                            <img src="~/Content/AdminTemplate/images/admin.jpeg" width="50" class="rounded-circle">
                            <a href="#" class="text-white  ml-3">Marven Smith</a>
                        </div>
                        <!-- List  -->
                        <ul class="navbar-nav flex-column mt-4">
                            <li class="nav-item active-link">
                                <a href="/admin/pages" class="nav-link text-white p-lg-4 p-3 p-md-3  ">
                                    <i class="fas fa-home text-light fa-lg pr-2"></i>
                                    DashBoard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Account/user-profile"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-user text-light fa-lg pr-2"></i>
                                    Profile/EditProfile
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/Slider/index"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas  fa-envelope text-light fa-lg pr-2"></i>
                                    Inbox/SliderImg
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/Shop/Categories"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-shopping-cart text-light fa-lg pr-2"></i>
                                    Sale/Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/shop/orders"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-chart-line text-light fa-lg pr-2"></i>
                                    Analytics/Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/shop/Products"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-chart-bar text-light fa-lg pr-2"></i>
                                    Charts/Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/Brand/Index"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-table text-light fa-lg pr-2"></i>
                                    Tables/Brand
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-wrench text-light fa-lg pr-2"></i>
                                    Settings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/admin/Pages/EditSidebar"
                                   class="nav-link text-white p-lg-4 p-3 p-md-3  sidebar-link">
                                    <i class="fas fa-file text-light pr-2"></i>
                                    Documentations/Sidebar
                                </a>
                            </li>
                        </ul>
                        <!-- End List  -->
                    </div>
                    <!-- End Of SideBar -->
                    <!-- top-nav -->
                    <div class="topNavbar col-xl-10 col-lg-9 col-md-8 ml-auto fixed-top bg-dark py-2">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h4 class="text-light">DASHBOARD</h4>
                            </div>
                            <div class="col-md-5">
                                <form class="activeFelx">
                                    <div class="input-group">
                                        <input class="form-control search-input" type="text" placeholder="Search">
                                    </div>

                                    <button type="button" class="btn search-button">

                                        <i class="fas fa-search fa-lg"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-3">
                                <ul class="navbar-nav">

                                    <li class="nav-items icon-parent">
                                        <a href="#" class="nav-link icon-bullet">
                                            <i class="fas fa-comments fa-lg text-muted"></i>
                                        </a>
                                    </li>
                                    <li class="nav-items icon-parent">
                                        <a href="#" class="nav-link icon-bullet">
                                            <i class="fas fa-bell fa-lg text-muted"></i>
                                        </a>
                                    </li>
                                    <!-- Log Out Icon -->
                                    <li class="nav-items ml-md-auto">
                                        <a href="#" class="nav-link text-danger" data-toggle="modal"
                                           data-target="#signOutPopUp">
                                            <i class="fas fa-sign-out-alt fa-lg"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- End of top-nav -->
                </div>
            </div>
        </div>
    </nav>

    <!-- Sign-Up Model -->
    <div class="modal fade" id="signOutPopUp">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Peter El-Gassar</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    تخرج مني انا؟ تجرح قلبي انا؟؟
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success">متخفيش انا مش ناسيكي</button>
                    <button class="btn btn-danger" data-dismiss="modal">راحل انا راحل</button>
                </div>
            </div>
        </div>
    </div>


    @if (ViewBag.DashBoardIndex == true)
    {
        @RenderBody()

    }
    else
    {


        <div class="container-fliud">
            <div class="row">
                <div class="col-md-8 col-lg-9 col-xl-10 ml-auto">
                    <div class="row ">

                        <div class="col mx-auto admin-render-wrapper">
                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    <!--End Sign-Up Model -->


    <footer class="fixed-bottom">
        <div class="container-fuild">
            <div class="row">
                <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
                    <div class="row border-top bg-light pt-3">
                        <div class="col-6 text-center">
                            <ul class="list-inline">
                                <li class="list-inline-item mr-2"><a class="text-dark" href="#">Code&Create</a></li>
                                <li class="list-inline-item mr-2"><a class="text-dark" href="#">About</a></li>
                                <li class="list-inline-item mr-2"><a class="text-dark" href="#">blog</a></li>
                                <li class="list-inline-item mr-2"><a class="text-dark" href="#">Suport</a></li>
                            </ul>

                        </div>
                        <div class="col-6 text-center">
                            <p>
                                &copy; 2020 Copyright. Made With <i class="fas fa-heart text-danger"></i> by <span class="Peter-ElGassar">Peter-ElGassar</span>
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Content/AdminTemplate/jQuery/jquery-1.10.2.min.js"></script>
    <!-- Popper.js Lib -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous">
    </script>
    <script src="~/Content/AdminTemplate/Bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/AdminTemplate/jQuery/mainScript.js"></script>

    <script src="~/Scripts/duDialog/duDialog.min.js"></script>

    <script type="text/javascript" src="~/Scripts/DashboardScript.js"></script>
    @*<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>

    @RenderSection("scripts", required: false)

</body>

</html>