@model IEnumerable<CmsShopingCard.Models.ViewModels.Shop.ProductVM>

@{
    ViewBag.Title = "Search";
}


<div tyle="padding:15px">
    <h1 class="panel-heading">Shearch Result</h1>
    <div class="row">
        @if (Model.Count() == 0 )
        {
            <h4>No results..</h4>
        }
        else
        {
            foreach (var subItem in Model)
            {
                        <!-- Product Single -->
                <div class=" col-md-3 product product-single">
                    <div class="product-thumb">
                        <a id="quick_btn" onclick="quickViewFunction(@subItem.Id)" class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick view</a>
                        <img src="/Images/Uploads/Products/@subItem.Id/Thumbs/@subItem.ImageName" />
                    </div>
                    <div class="product-body">
                        <h3 class="product-price">$@subItem.Price</h3>

                        <h2 class="product-name"><a href="/Shop/product-details/@subItem.Slug">@subItem.Name</a></h2>
                        <div class="product-btns">
                            <a href="" class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                        </div>
                    </div>
                </div>
                        <!-- /Product Single -->
            }
        }

    </div>
</div>


<!--Model Poup-->
<div class="modal fade" id="MyModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <!--Model Header-->
            <div class="modal-header">
                <a href="#" data-dismiss="modal" class="class pull-right"><span class="fa fa-window-close fa-lg" style="    color: #ff4040;"></span></a>
                <h3 class="modal-title">Quick View to Product</h3>
            </div>
            <!--/Model Header-->
            <!--Model Body-->
            <div class="modal-body" id="MyModel_BodyDiv">

            </div>
            <!--/Model Body-->

        </div>
    </div>
</div>
<!--/Model Poup-->
<script src="~/Scripts/MyJavaScript.js"></script>
