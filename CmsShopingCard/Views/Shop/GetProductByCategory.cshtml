@model CmsShopingCard.Models.ViewModels.Shop.CategoriesVM







@if (Model.Categories.Any())
{
    foreach (var category in Model.Categories)
    {

        <!-- Feature Product Section Start -->
        <div class="product-section section mb-70">
            <div class="container">
                <div class="row">

                    <!-- Section Title Start -->
                    <div class="col-12 mb-40">
                        <div class="section-title-one" data-title="FEATURED ITEMS">
                            <h1>
                                <a href="/shop/category?categoryName=@category.Slug">@category.Name</a>
                            </h1>
                        </div>
                    </div><!-- Section Title End -->
                    <!-- Product Tab Content Start -->
                    <div class="col-12">
                        <div class="tab-content">

                            <!-- Tab Pane Start -->
                            <div class="tab-pane fade show active" id="tab-one">

                                <!-- Product Slider Wrap Start -->
                                <div class="product-slider-wrap product-slider-arrow-one">
                                    <!-- Product Slider Start -->
                                    <div class="product-slider product-slider-4">


                                        @* Singel product col *@
                                        @for (int i = 0; i < category.Products.Count(); i++)
                                        {
                                            <div class="col pb-20 pt-10">
                                                <!-- Product Start -->
                                                <div class="ee-product">

                                                    <!-- Image -->
                                                    <div class="image">
                                                        <div class="quick-view-div card-img-overlay">

                                                            <a id="" onclick="quickViewFunction(@category.Products.ToArray()[i].Id)" class="btn btn-warning ">
                                                                <i class="fa fa-search-plus"></i>
                                                                Quick view
                                                            </a>
                                                        </div>
                                                        <a href="/Shop/product-details/@category.Products.ToArray()[i].Slug" class="img">

                                                            <img class="slider-img" src="/Images/Uploads/Products/@category.Products.ToArray()[i].Id/Thumbs/@category.Products.ToArray()[i].ImageName" />

                                                        </a>

                                                        <div class="wishlist-compare">
                                                            <a href="#" data-tooltip="Compare">
                                                                <i class="ti-control-shuffle"></i>
                                                            </a>
                                                            <!---WishList-->
                                                            @if (Model.IsAuth)
                                                            {
                                                                var className = Model.WishLists.Contains(category.Products.ToArray()[i].Id) ? "added1" : "";
                                                                <a href="#"
                                                                   class="wishlist @className"
                                                                   data-product-id="@category.Products.ToArray()[i].Id"
                                                                   data-tooltip="Wishlist">
                                                                    <i class="ti-heart"></i>
                                                                </a>
                                                            }
                                                           

                                                        </div>

                                                        <a href="#" class="add-to-cart addToCard" data-product-id="@category.Products.ToArray()[i].Id" data-product-name="@category.Products.ToArray()[i].Name">
                                                            <i class="ti-shopping-cart"></i><span>ADD TO CART</span>
                                                        </a>
                                                    </div>

                                                    <!-- Content -->
                                                    <div class="content">

                                                        <!-- Category & Title -->
                                                        <div class="category-title">

                                                            <a href="#" class="cat">@category.Name</a>
                                                            <h5 class="title">
                                                                <a href="/Shop/product-details/@category.Products.ToArray()[i].Slug">
                                                                    @category.Products.ToArray()[i].Name
                                                                </a>
                                                            </h5>

                                                        </div>

                                                        <!-- Price & Ratting -->
                                                        <div class="price-ratting">

                                                            <h5 class="price">$@category.Products.ToArray()[i].Price</h5>
                                                            <div class="ratting">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                            </div>

                                                        </div>

                                                    </div>

                                                </div><!-- Product End -->
                                            </div>
                                        }
                                        @* End Singel product col *@

                                    </div>
                                    <!-- Product Slider End -->
                                </div>
                                <!-- Product Slider Wrap End -->

                            </div>
                            <!-- Tab Pane End -->
                        </div>
                    </div><!-- Product Tab Content End -->

                </div>
            </div>
        </div>
        <!-- Feature Product Section End -->
    }
}






<div id="MyModel" class="modal fade">
    <div class="modal-dialog" style="min-width: 70%">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Quick Product View
                </h4>
                <button type="button" class="close btn-warning" data-dismiss="modal">&times;</button>

            </div>

            <div class="modal-body" id="MyModel_BodyDiv">

            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Content/slick/slick.js"></script>
}