@model CmsShopingCard.Models.ViewModels.Shop.ProductVM

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 product_img">
            <img src="/Images/Uploads/Products/@Model.Id/Thumbs/@Model.ImageName" class="img-responsive">
        </div>

        <div class="col-md-6 product_content">

            <h4>Product Id: <span>@Model.Id</span></h4>
            <div class="rating">
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                (10 reviews)
            </div>
            <p>@Html.Raw(Model.Description)</p>
            <h3 class="cost"><span class="fa fa-usd"></span>@Model.Price</h3>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <select class="form-control" name="select">
                        <option value="" selected="">Color</option>
                        <option value="black">Black</option>
                        <option value="white">White</option>
                        <option value="gold">Gold</option>
                        <option value="rose gold">Rose Gold</option>
                    </select>
                </div>
                <!-- end col -->
                <div class="col-md-6 col-sm-12">
                    <select class="form-control" name="select">
                        <option value="" selected="">QTY</option>
                        <option value="">1</option>
                        <option value="">2</option>
                        <option value="">3</option>
                    </select>
                </div>
                <!-- end col -->
            </div>


        </div>
    </div>
    <div class="quick-view-btn row">
        <div class="col-md-6 col-sm-12" style="padding:6px 15px">
            <a id="btn_cart" class="addToCard primary-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</a>
        </div>
        <div class="col-md-6 col-sm-12" style="padding:6px 15px">
            <a class="addToWish primary-btn"><span class="fa fa-heart"></span> Add To Wishlist</a>
        </div>
    </div>

</div>

@section Scripts{

    <script>
        $("#btn_cart").click(function (e) {
            e.preventDefault();
            debugger;
            var url = "/Cart/AddToCartPartial";
            $.get(url, { id:@Model.Id} ,function(data){
                debugger;
                $(".ajaxCart").html(data);
            }).done(function(){
                $("span.loader").removeClass("ib");
                $("span.ajaxMS").addClass("ib");

                setTimeout(function(){
                    $("span.ajaxMS").fadeOut("fast");
                    $("span.ajaxMS").removeClass("ib");
                },1500);
            });

        });
    </script>
}