@model CmsShopingCard.Models.ViewModels.pages.PageVM

@{
    ViewBag.Title = "Edit page";
}



@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<div class="pb-5 pl-md-4">

    @using (Html.BeginForm("Editpage", "Pages"))
    {

        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Edit page</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group row">
            <div class="col-10 col-sm-8  mx-auto">
                @Html.LabelFor(model => model.Titel, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Titel, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Titel, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-10 col-sm-8  mx-auto">
                @Html.LabelFor(model => model.Sulg, htmlAttributes: new { @class = "control-label " })
                <div>
                    @if (Model.Sulg == "home")
                    {
                        @Html.EditorFor(model => model.Sulg, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    }
                    else
                    {
                        @Html.EditorFor(model => model.Sulg, new { htmlAttributes = new { @class = "form-control" } })
                    }
                    @Html.ValidationMessageFor(model => model.Sulg, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10 mx-auto">


                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-check row">
            <div class="col-md-10 mx-auto">
                <div>
                    <div class="checkbox">
                        @Html.LabelFor(model => model.HasSidebar, htmlAttributes: new { @class = "control-label mr-3" })

                        @Html.EditorFor(model => model.HasSidebar)
                        @Html.ValidationMessageFor(model => model.HasSidebar, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-md-10 mx-auto d-flex justify-content-between py-5">
                <input type="submit" value="Update" class="btn form-btn" />
                <a class="btn btn-secondary" href="/admin/pages/index">
                    Back to Pages
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
    }


</div>

@section Scripts
{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body");
    </script>
}