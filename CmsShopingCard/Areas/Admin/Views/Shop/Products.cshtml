@model IEnumerable<CmsShopingCard.Models.ViewModels.Shop.ProductVM>

@{
    ViewBag.Title = "Products";
}
@using PagedList.Mvc;
@using PagedList;

<div class="pr-2">

    <h2 class="mb-3">Products</h2>
    <div class="products-btn-row mb-3">

        <select id="SelectdCategory" name="SelectdCategory" class="form-control" style="width:25vmin;">
            <option value="0">All</option>
            @foreach (var item in ViewBag.Categories)
            {
                if (ViewBag.SelectCat == item.Value)
                {
                    <option selected="selected" value="@item.Value">@item.Text</option>
                }
                else
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
        </select>
        <p>
            @Html.ActionLink("Add New Product", "AddProduct", "", new { @class = "btn btn-primary" })
        </p>
    </div>

    <table class="table table-light table-striped py-5">
        <tr>
            <th>
                Image

            </th>
            <th>
                Name
            </th>
            <th>
                Slug
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>

            <th></th>
        </tr>
        @foreach (var product in ViewBag.OnePageOfProducts)
        {

            <tr>
                <td class="dashboard-product-img">
                    <a href="/admin/shop/EditProduct/@product.Id">
                        <img src="/Images/Uploads/Products/@product.Id/Thumbs/@product.ImageName" class="rounded img-responsive" width="120" height="120" />
                    </a>
                </td>
                <td>@product.Name</td>
                <td>@product.Slug</td>
                <td>@product.Quantity</td>
                <td>@product.Price</td>
                <td>
                    <a href="/admin/shop/EditProduct/@product.Id" class="edit-icon btn btn-primary"><i class=" fas fa-edit"></i></a>
                    <a href="/admin/shop/DeleteProduct/@product.Id" class="deleteProduct btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }


    </table>

    @*@Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Products", new { page, catId = ViewBag.SelectCat }))*@

    @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page =>
            Url.Action("Products", new { page, catId = ViewBag.SelectCat }),
            new PagedListRenderOptions {
                LiElementClasses = new string[] { "page-item" }
            })
</div>

@section Scripts{
    <script>
        $(function () {
            /////////////////////////////////////////////////////////////////////
            /*
            * Select Product From Spcified Category
            */
            $("#SelectdCategory").on("change", function () {
                var url = $(this).val();
                if (url) {
                    window.location = "/Admin/Shop/Products?catId=" + url;
                }
                return false;
            });

            /////////////////////////////////////////////////////////////////////
            /*
            * confirm Products Deletion
            */
            $('a.deleteProduct').click(function () {
                if (!confirm("Confirm Product Deletion")) {
                    return false;
                }
            });

        });
    </script>
}


