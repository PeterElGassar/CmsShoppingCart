@model CmsShopingCard.Models.ViewModels.Shop.CategoriesVM

@{
    ViewBag.Title = "DetailsCategory";
}

<h2>DetailsCategory</h2>

<div>
    <h4>CategoriesVM</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Brands)
        </dt>

        <dd>
            <div class="brands__display">
                @foreach (var item in Model.Brands)
            {
                if (item.Checked)
                {
                        <div class=" brands__item">
                            @item.Name
                            <div class="thumbnail" style="width:120px">
                                <img src="~/Images/Uploads/Brands/@item.Id/Thumbs/@item.ImageName" width="160" height="160" />
                            </div>
                        </div>
                    }
                }
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Categories", "Categories", "Shop")
</p>
